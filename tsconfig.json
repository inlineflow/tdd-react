{
    "compilerOptions": {
        "types": ["jest", "node"],
        "jsx": "react-jsx",
        // "allowImportingTsExtensions": true,
        "target": "es2016",
        "module": "commonjs",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
      "include": ["src/**/*.ts", "tests/**/*.ts", "src/index.tsx"]
}